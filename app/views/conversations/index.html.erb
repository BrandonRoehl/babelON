<p id="notice"><%= notice %></p>

<h1>Conversations</h1>

<table>
    <thead>
        <tr>
            <th>Peope</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        <% @conversations.each do |conversation| %>
        <tr>
            <td>
                <%= link_to conversation do %>
                    <%= conversation.display_users(current_user) %>
                <% end %>
            </td>
            <td><%= link_to 'Edit', edit_conversation_path(conversation) %></td>
            <td><%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

